<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Back arrow at top left -->
    <Button
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="&lt;"
        android:textSize="24sp"
        android:textColor="#000000"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="8dp" />

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <!-- Logo Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/logoImage"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logohm"
                    android:scaleType="centerCrop"
                    android:contentDescription="Logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TERMS AND CONDITION"
                    android:layout_marginBottom="15dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <!-- Terms Text -->
            <TextView
                android:id="@+id/tvTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:text="By using FishSecure, you agree to:\n\n
1. Use the app responsibly and for monitoring aquarium purposes only.\n\n
2. Keep your data accurate and respect others' use of the service.\n\n
3. Allow us to use your data to improve the app.\n\n
4. Not copy or misuse any part of the app.\n\n
5. Understand that we're not liable for any issues from using the app.\n\n
6. Accept that we may update these terms anytime."/>


            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>


            <!-- Contact Section (bold title + normal content) -->
            <TextView
                android:id="@+id/tvContactTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="CONTACT"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvContactDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For questions, contact:\nfish.secure@example.com"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Fixed -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#3F1C91"
        android:padding="3dp"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>