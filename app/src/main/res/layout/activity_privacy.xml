<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Back arrow at top left -->
    <Button
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="&lt;"
        android:textSize="24sp"
        android:textColor="#000000"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="8dp" />

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <!-- Logo Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/logoImage"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logohm"
                    android:scaleType="centerCrop"
                    android:contentDescription="Logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRIVACY POLICY"
                    android:layout_marginBottom="15dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <!-- Terms Text -->
            <TextView
                android:id="@+id/tvTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:text=" FishSecure values your privacy.\n
Here's how we handle your information:\n\n
1. We collect basic info like your name and location to improve your farming experience.\n\n
2. Your data is kept safe and never sold.\n\n
3. We only use it to provide app features and updates.\n\n
4. You can edit your info anytime.\n\n
5. Using the app means you agree to this policy." />


            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"/>


            <!-- Contact Section (bold title + normal content) -->
            <TextView
                android:id="@+id/tvContactTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="CONTACT"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvContactDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For questions, contact:\nfish.secure@example.com"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Fixed -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#3F1C91"
        android:padding="3dp"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>